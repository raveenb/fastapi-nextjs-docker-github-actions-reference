{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ]
    ],
    "subject-case": [2, "never", ["upper-case", "pascal-case", "start-case"]],
    "subject-empty": [2, "never"],
    "subject-full-stop": [2, "never", "."],
    "type-case": [2, "always", "lower-case"],
    "type-empty": [2, "never"],
    "scope-case": [2, "always", "lower-case"],
    "header-max-length": [2, "always", 100],
    "body-max-line-length": [2, "always", 100],
    "footer-max-line-length": [2, "always", 100]
  },
  "prompt": {
    "settings": {},
    "messages": {
      "skip": ":skip",
      "max": "upper limit %d",
      "min": "%d chars at least",
      "emptyWarning": "can not be empty",
      "upperLimitWarning": "over limit",
      "lowerLimitWarning": "below limit"
    },
    "questions": {
      "type": {
        "description": "Select the type of change that you're committing",
        "enum": {
          "feat": {
            "description": "âœ¨ A new feature",
            "title": "Features",
            "emoji": "âœ¨"
          },
          "fix": {
            "description": "ğŸ› A bug fix",
            "title": "Bug Fixes",
            "emoji": "ğŸ›"
          },
          "docs": {
            "description": "ğŸ“š Documentation only changes",
            "title": "Documentation",
            "emoji": "ğŸ“š"
          },
          "style": {
            "description": "ğŸ’„ Changes that do not affect the meaning of the code",
            "title": "Styles",
            "emoji": "ğŸ’„"
          },
          "refactor": {
            "description": "â™»ï¸ A code change that neither fixes a bug nor adds a feature",
            "title": "Code Refactoring",
            "emoji": "â™»ï¸"
          },
          "perf": {
            "description": "âš¡ A code change that improves performance",
            "title": "Performance Improvements",
            "emoji": "âš¡"
          },
          "test": {
            "description": "ğŸ§ª Adding missing tests or correcting existing tests",
            "title": "Tests",
            "emoji": "ğŸ§ª"
          },
          "build": {
            "description": "ğŸ“¦ Changes that affect the build system or external dependencies",
            "title": "Builds",
            "emoji": "ğŸ“¦"
          },
          "ci": {
            "description": "ğŸ‘· Changes to our CI configuration files and scripts",
            "title": "Continuous Integrations",
